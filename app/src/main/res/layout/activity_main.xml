<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@mipmap/backgrund_tree1"
    tools:showIn="@layout/activity_main">

  <TextView
      android:layout_width="0dp"
      android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/pointsTextView"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="10dp"
    android:textSize="60sp"/>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/elementsRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:itemCount="12"

      tools:listitem="@layout/element_recycle_view"

      app:layout_constraintBottom_toTopOf="@+id/resumeButton"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/pointsTextView" />

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/resumeButton"
      android:text="resume"
      android:layout_marginBottom="15dp"
      app:layout_constraintTop_toBottomOf="@id/elementsRecyclerView"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>