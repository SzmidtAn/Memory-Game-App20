<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgrund_dialog_corner"
    tools:context=".HomeActivity">




    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_margin="30dp"
        android:foregroundGravity="center"
        android:textAlignment="center"
        app:srcCompat="@drawable/winner_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awesome!"
        android:textColor="#000"
        android:textSize="50sp"
        android:layout_margin="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@id/imageView7"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="188dp" />

    <TextView
        android:id="@+id/movesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moves:"
        android:textSize="35sp"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@id/textView4"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="140dp" />

    <TextView
        android:id="@+id/timeDialogWinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textSize="35sp"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/textView4"
        app:layout_constraintTop_toBottomOf="@id/movesTextView"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="140dp" />

    <Button
        android:id="@+id/goToMenuButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to menu"
        android:background="@drawable/grid_item_corner"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeDialogWinTextView"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>