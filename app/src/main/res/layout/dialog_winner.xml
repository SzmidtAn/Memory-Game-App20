<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgrund_dialog_corner"
    tools:context=".HomeActivity">




    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_margin="30dp"
        android:foregroundGravity="center"
        android:textAlignment="center"
        app:srcCompat="@drawable/winner_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awesome!"
        android:textColor="#000"
        android:textSize="50sp"
        android:layout_margin="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@id/imageView7"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="188dp" />

    <TextView
        android:id="@+id/movesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New high score is 4"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/textView4"
 />

    <TextView
        android:id="@+id/timeDialogWinTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/movesTextView"
        app:layout_constraintTop_toBottomOf="@id/movesTextView"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="140dp" />


    <ImageView
        android:id="@+id/TrophyimageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/trophy"
        app:layout_constraintTop_toTopOf="@id/movesTextView"
        app:layout_constraintRight_toLeftOf="@id/movesTextView"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="359dp" />

    <ImageView
        android:id="@+id/Trophy2imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/trophy"
        app:layout_constraintTop_toTopOf="@id/movesTextView"
        app:layout_constraintLeft_toRightOf="@id/movesTextView"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="359dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/timeDialogWinTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    <Button
        android:id="@+id/goToMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_item_corner"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_margin="10dp"
        android:text="Go to menu"
        android:textAlignment="center"
        android:textSize="20sp"
    />

        ยง<Button
            android:id="@+id/goToNextLevelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grid_item_corner"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_margin="10dp"
            android:text="PLAY"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>