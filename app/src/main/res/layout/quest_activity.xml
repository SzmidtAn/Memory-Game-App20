<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backg">


    <ImageView
        android:id="@+id/levelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:src="@drawable/selectlogo"
        android:textSize="40dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="SELECT LEVEL"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/levelsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8BFFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/levelTextView"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="15dp"
        android:textAlignment="center"
        android:drawableBottom="@android:drawable/ic_media_previous"
        app:layout_constraintLeft_toLeftOf="@id/levelsRecyclerView"
        app:layout_constraintTop_toTopOf="@id/rightButton" />

    <Button
        android:id="@+id/rightButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="15dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:drawableBottom="@android:drawable/ic_media_next"
        app:layout_constraintRight_toRightOf="@id/levelsRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/levelsRecyclerView" />


    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/backgrund_dialog_corner"
        android:text="HOME"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@id/levelsRecyclerView"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="263dp" />


</androidx.constraintlayout.widget.ConstraintLayout>