<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/backgrund_tree1">


    <TextView
        android:id="@+id/levelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@id/levelsRecyclerView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/levelsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/levelTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        />

    <Button
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingBottom="15dp"
        android:textAlignment="center"
        android:drawableBottom="@android:drawable/ic_media_previous"
        app:layout_constraintLeft_toLeftOf="@id/levelsRecyclerView"
        app:layout_constraintTop_toTopOf="@id/rightButton" />

    <Button
        android:id="@+id/rightButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingBottom="15dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:drawableBottom="@android:drawable/ic_media_next"
        app:layout_constraintRight_toRightOf="@id/levelsRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/levelsRecyclerView" />


    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@id/levelsRecyclerView"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="263dp" />


</androidx.constraintlayout.widget.ConstraintLayout>