<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/backgrund_tree1">



    <Button
        android:id="@+id/questButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="361dp"

        android:layout_height="111dp"
        android:fontFamily="monospace"
        android:text="@string/quest"
        android:background="@drawable/grid_item_corner"
        android:textColor="@color/cardview_light_background"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/quickGamebutton"
        android:layout_width="240dp"
        android:layout_height="84dp"
        android:layout_margin="15dp"
        android:fontFamily="casual"
        android:text="@string/quick_game"
        android:background="@drawable/backgrund_dialog_corner"
        android:textColor="@color/cardview_shadow_start_color"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questButton" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:src="@mipmap/imagehome"
    />

</androidx.constraintlayout.widget.ConstraintLayout>